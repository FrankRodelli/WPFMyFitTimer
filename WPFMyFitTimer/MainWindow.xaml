<Window x:Class="WPFMyFitTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMyFitTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="322.252">
    <Grid>
        <Button x:Name="StartTimerButton" Content="Start Timer" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="137" Height="67" Click="StartTimerButton_Click"/>
        <Button x:Name="StopTimerButton" Content="Stop Timer" HorizontalAlignment="Left" Margin="165,94,0,0" VerticalAlignment="Top" Width="137" Height="67" Click="StopTimerButton_Click"/>
        <Label x:Name="CurrentTimerLabel" Content="00:00.00" Margin="85,22,0,0" VerticalAlignment="Top" Height="67" Width="141" FontSize="36" HorizontalAlignment="Left"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="218" Margin="25,179,0,0" VerticalAlignment="Top" Width="263"/>

    </Grid>
</Window>
